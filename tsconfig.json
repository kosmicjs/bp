{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "Node16",
    "outDir": "./dist",
    "paths": {
      "@kosmic/compose": ["./node_modules/koa-compose/dist/index.d.mts"],
      "@kosmic/koa": ["./node_modules/koa/dist/esm/application.d.mts"],
      "koa": [
        // "./node_modules/koa/dist/esm/application"
        "./node_modules/koa/dist/esm/application.d.mts",
      ],
      "koa-compose": ["./node_modules/koa-compose/dist/index.d.mts"],
      "views/*": ["./src/views/*"],
    },
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": ["vite/client"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "packages/**/*",
    "test/**/*",
    "src/public/**/*",
  ],
}
