{
  "name": "@kosmic/core",
  "version": "0.0.0",
  "description": "Strongly typed Koa web and api framework with all the basics built in and minimal opinions",
  "bugs": {
    "url": "https://github.com/spence-s/kosmic/issues"
  },
  "repository": {
    "url": "https://github/com/spence-s/kosmic"
  },
  "license": "MIT",
  "author": {
    "name": "Spencer Snyder",
    "email": "sasnyde2@gmail.com",
    "url": "https://spencersnyder.io"
  },
  "type": "module",
  "imports": {
    "#components/*": "./dist/src/components/*",
    "#config/*": "./dist/src/config/*",
    "#models/*": "./dist/src/models/*",
    "#db/*": "./dist/src/db/*"
  },
  "main": "dist/src/index.js",
  "source": "./src/app/client/main.ts",
  "types": "dist/src/index.d.ts",
  "bin": {
    "kosmic": "dist/packages/dev/cli.js"
  },
  "scripts": {
    "analyze": "vite-bundle-visualizer",
    "build": "npm run clean && npm run compile",
    "check": "tsc -p tsconfig.json --noEmit",
    "check:watch": "tsc -p tsconfig.json --noEmit --watch",
    "clean": "rimraf -rf ./dist",
    "compile": "npm run compile:tsc && npm run compile:vite && npm run compile:cp",
    "compile:cp": "cp -rp src/public ./dist/src",
    "compile:tsc": "tsc -p tsconfig.json",
    "compile:vite": "vite build",
    "dev": "vite & tsc --watch & sleep 5 && node --watch dist/src/index.js",
    "migrate": "npm run compile:tsc && node ./dist/src/db/migrate up",
    "migrate:down": "npm run compile:tsc && node ./dist/src/db/migrate down",
    "prepare": "husky || true",
    "prepublishOnly": "npm run build",
    "start": "NODE_ENV=production node dist/src/index.js",
    "test": "vitest"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-organize-attributes"
    ]
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@stripe/stripe-js": "^4.9.0",
    "@types/swagger-ui-dist": "^3.30.5",
    "argon2": "^0.41.1",
    "bootstrap": "^5.3.3",
    "camelcase": "^8.0.0",
    "chokidar": "^4.0.1",
    "clsx": "^2.1.1",
    "copy-to-clipboard": "^3.3.3",
    "dedent": "^1.5.3",
    "defaults": "^3.0.0",
    "dotenv": "^16.4.5",
    "escape-goat": "^4.0.0",
    "execa": "^9.4.1",
    "fast-glob": "^3.3.2",
    "globby": "^14.0.2",
    "got": "^14.4.3",
    "helmet": "^8.0.0",
    "highlight.js": "^11.10.0",
    "htmx.org": "^1.9.12",
    "humanize-string": "^3.0.0",
    "kcors": "^2.2.2",
    "koa": "^2.15.3",
    "koa-404-handler": "^0.1.0",
    "koa-bodyparser": "^4.4.1",
    "koa-compose": "^4.1.0",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "koa-json": "^2.0.2",
    "koa-passport": "^6",
    "koa-pino-logger": "^4.0.0",
    "koa-requestid": "^2.2.1",
    "koa-response-time": "^2.1.0",
    "koa-session": "^6.4.0",
    "koa-static": "^5.0.0",
    "kysely": "^0.27.4",
    "lodash": "^4.17.21",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "path-to-regexp": "^8.2.0",
    "pg": "^8.13.1",
    "pino": "9.5.0",
    "pino-http": "^10.3.0",
    "pino-princess": "^1.0.0",
    "pino-std-serializers": "^7.0.0",
    "preact": "^10.24.3",
    "preact-render-to-string": "^6.5.11",
    "short-uuid": "^5.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sql-template-strings": "^2.2.2",
    "stripe": "^17.2.1",
    "swagger-ui-dist": "^5.17.14",
    "titleize": "^4.0.0",
    "wait-on": "^8.0.1",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@kosmic/types": "^0.1.0",
    "@types/bootstrap": "^5.2.10",
    "@types/kcors": "^2",
    "@types/koa-bodyparser": "^4",
    "@types/koa-conditional-get": "^2.0.3",
    "@types/koa-etag": "^3.0.3",
    "@types/koa-passport": "^6.0.3",
    "@types/koa-pino-logger": "^3.0.4",
    "@types/koa-response-time": "^2",
    "@types/koa-session": "^6.4.5",
    "@types/koa-static": "^4.0.4",
    "@types/node": "~22.8.0",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.11.10",
    "eslint-config-preact": "^1.5.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.37.2",
    "husky": "^9.1.6",
    "kosmic": "file:.",
    "lint-staged": "^15.2.10",
    "meow": "^13.2.0",
    "npm-package-json-lint": "^8.0.0",
    "npm-package-json-lint-config-default": "^7.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-packagejson": "^2.5.3",
    "rimraf": "^6.0.1",
    "sass": "1.77.6",
    "type-fest": "^4.26.1",
    "typed-htmx": "^0.3.1",
    "typescript": "~5.6.3",
    "vite": "^5.4.10",
    "vite-bundle-visualizer": "^1.2.1",
    "vitest": "^2.1.3",
    "xo": "^0.59.3"
  }
}
