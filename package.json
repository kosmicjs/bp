{
  "name": "@kosmic/core",
  "version": "0.0.0",
  "description": "Strongly typed Koa web and api framework with all the basics built in and minimal opinions",
  "bugs": {
    "url": "https://github.com/spence-s/kosmic/issues"
  },
  "repository": {
    "url": "https://github/com/spence-s/kosmic"
  },
  "license": "MIT",
  "author": {
    "name": "Spencer Snyder",
    "email": "sasnyde2@gmail.com",
    "url": "https://spencersnyder.io"
  },
  "type": "module",
  "main": "dist/src/index.js",
  "source": "./src/app/client/main.ts",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "analyze": "vite-bundle-visualizer",
    "build": "npm run clean && npm run compile",
    "clean": "rimraf -rf ./dist & rimraf -rf ./src/public/assets & rimraf -rf ./src/public/.vite",
    "compile": "tsc -p tsconfig.json && vite build && cp -rp src/public ./dist/src",
    "dev": "vite-node ./packages/dev/index.ts",
    "migrate": "vite-node ./src/db/migrate up",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "start": "NODE_ENV=production node dist/src/index.js",
    "test": "node --import tsimp/import --test ./test/server.ts"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson"
    ]
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@stripe/stripe-js": "^3.3.0",
    "argon2": "^0.40.1",
    "bootstrap": "^5.3.3",
    "camelcase": "^8.0.0",
    "chokidar": "^3.6.0",
    "clsx": "^2.1.1",
    "copy-to-clipboard": "^3.3.3",
    "dedent": "^1.5.3",
    "dotenv": "^16.4.5",
    "escape-goat": "^4.0.0",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "globby": "^14.0.1",
    "got": "^14.2.1",
    "highlight.js": "^11.9.0",
    "htmx.org": "^1.9.12",
    "humanize-string": "^3.0.0",
    "kcors": "^2.2.2",
    "koa": "^2.15.3",
    "koa-404-handler": "^0.1.0",
    "koa-bodyparser": "^4.4.1",
    "koa-compose": "^4.1.0",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "koa-json": "^2.0.2",
    "koa-passport": "^6",
    "koa-pino-logger": "^4.0.0",
    "koa-requestid": "^2.2.1",
    "koa-response-time": "^2.1.0",
    "koa-session": "^6.4.0",
    "koa-static": "^5.0.0",
    "kysely": "^0.27.3",
    "lodash": "^4.17.21",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "path-to-regexp": "^6.2.2",
    "pg": "^8.11.5",
    "pino": "9.0.0",
    "pino-http": "^9.0.0",
    "pino-princess": "file:../../pino-princess",
    "preact": "^10.21.0",
    "preact-render-to-string": "^6.4.2",
    "short-uuid": "^5.2.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "sql-template-strings": "^2.2.2",
    "stripe": "^15.5.0",
    "titleize": "^4.0.0",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@kosmic/types": "file:../types",
    "@prettier/plugin-pug": "^3.0.0",
    "@types/bootstrap": "^5.2.10",
    "@types/kcors": "^2",
    "@types/koa-bodyparser": "^4",
